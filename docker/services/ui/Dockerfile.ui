# UI Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies including the missing ones
RUN npm install && \
    npm install date-fns react-window @types/react-window

# Copy source code
COPY src/ ./src/
COPY vite.config.ts ./
COPY tsconfig.docker.json ./tsconfig.json

# Expose Vite dev server port
EXPOSE 5173

# Start Vite dev server with host binding for Docker
CMD ["npm", "run", "ui", "--", "--host", "0.0.0.0"]
