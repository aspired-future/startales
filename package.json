{
  "name": "galactic-tale-weaver",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "dev:demo": "tsx src/demo/index.ts",
    "dev:demo2": "tsx src/demo/sprint2-demo.ts",
    "dev:demo3": "tsx src/demo/sprint3-demo.ts",
    "dev:demo4": "tsx src/demo/sprint4-demo.ts",
    "ui": "vite --config vite.config.ts",
    "test:unit": "node ./node_modules/vitest/vitest.mjs run tests/**/*.spec.ts",
    "test:ui": "playwright test",
    "test:all": "npm run test:unit && npm run test:ui",
    "demo:stt-ws": "node tests/scripts/stt_ws_e2e.mjs",
    "build": "tsc -p .",
    "start": "node --experimental-specifier-resolution=node dist/server/index.js",
    "test": "jest",
    "cost": "ts-node ./scripts/cost_calculator.ts",
    "tasks:update-demos": "node --experimental-specifier-resolution=node ./scripts/update_task_demos.js"
  },
  "dependencies": {
    "@qdrant/js-client-rest": "^1.15.1",
    "@types/seedrandom": "^3.0.8",
    "@types/sqlite3": "^5.1.0",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "nanoid": "^5.1.5",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "seedrandom": "^3.0.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.10",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.1",
    "jest": "^30.0.5",
    "next": "^15.4.6",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.4",
    "vitest": "^1.6.0"
  }
}
