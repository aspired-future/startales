{
  "name": "galactic-tale-weaver",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "ui": "vite --config vite.config.ts",
    "test:unit": "node ./node_modules/vitest/vitest.mjs run tests/**/*.spec.ts",
    "test:ui": "playwright test",
    "test:all": "npm run test:unit && npm run test:ui",
    "demo:stt-ws": "node tests/scripts/stt_ws_e2e.mjs",
    "build": "tsc -p .",
    "start": "node --experimental-specifier-resolution=node dist/server/index.js",
    "test": "echo 'Add tests in tests/ soon' && exit 0",
    "cost": "ts-node ./scripts/cost_calculator.ts",
    "tasks:update-demos": "node --experimental-specifier-resolution=node ./scripts/update_task_demos.js"
  },
  "dependencies": {
    "ws": "^8.18.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "@playwright/test": "^1.46.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.18.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.4",
    "vitest": "^1.6.0"
  }
}
